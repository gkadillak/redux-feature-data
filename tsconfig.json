{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "strict": true,
    "declaration": true,
    "outDir": "./dist",
    "moduleResolution": "node"
  },
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs"
  },
  "exclude": ["tests", "dist", "node_modules", "src/**/*.test.ts"],
  "include": ["src/**/*"]
}
